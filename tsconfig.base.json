{
	"compileOnSave": false,
	"compilerOptions": {
		"rootDir": ".",
		"sourceMap": true,
		"declaration": false,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"target": "es2015",
		"module": "esnext",
		"lib": ["es2020", "dom"],
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@tic-tac-toe/constants": ["constants/src/index.ts"],
			"@tic-tac-toe/core": ["core/src/index.ts"],
			"@tic-tac-toe/debug": ["debug/src/index.ts"],
			"@tic-tac-toe/model": ["model/src/index.ts"],
			"@tic-tac-toe/ui": ["ui/src/index.ts"]
		},
		"typeRoots": ["./types/index.d.ts"],
		"esModuleInterop": true
	},
	"exclude": ["node_modules", "tmp"]
}
